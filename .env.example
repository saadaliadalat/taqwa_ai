# ===================================
# TAQWA AI - Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# -----------------------------------
# GROQ API (Required)
# -----------------------------------
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# -----------------------------------
# SUNNAH.COM API (Required)
# -----------------------------------
# Get your API key from: https://sunnah.com/developers
SUNNAH_API_KEY=your_sunnah_api_key_here

# -----------------------------------
# FIREBASE (Auto-configured by Firebase)
# -----------------------------------
# These are typically auto-configured when deploying to Firebase
# Only set manually if running locally without emulators
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_PRIVATE_KEY=your_firebase_private_key
# FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# -----------------------------------
# RATE LIMITING
# -----------------------------------
# Maximum requests per minute per user
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------
# NOTIFICATIONS
# -----------------------------------
# Timezone for scheduled notifications (IANA format)
NOTIFICATION_TIMEZONE=UTC

# -----------------------------------
# DEVELOPMENT
# -----------------------------------
# Set to 'development' for local testing, 'production' for deployment
NODE_ENV=production
